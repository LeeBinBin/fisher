.navbar {
  background: linear-gradient(130deg,#009fad 0%,#3ebfca 30%,#5dcec7 60%,#419bc5 100%);
  width: 100%;
  color: #fff;
}
.navbar-title {
  display: flex;
  justify-content: center;
  padding-top: 58rpx;
}
/* 用户信息样式 */
.top-box {
  height: 400rpx;
  /* background-color: #e2dada; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 用户头像样式 */
.top-box .avatar {
  display: block;
  width: 190rpx;
  height: 190rpx;
  border-radius: 100rpx;
  border: 4rpx solid white;
  /* box-shadow: 0 2rpx 10rpx black; */
}

/* 面板样式设置 */
.panel {
  background-color: white;
  border-radius: 6rpx;
}

.panel-list-item {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 0 20rpx;
  line-height: 1;
}
.image-style {
  width: 45rpx;
  height: 45rpx;
  padding-right: 15rpx;
}

.panel-list-item > view {
  display: flex;
  align-items: center;
  gap: 5rpx;
} 
.panel-list-item:nth-child(n+2){
  border-top: 1rpx solid #e4e1e1;
}

/* 箭头样式 */
.panel-list-item image {
  width: 45rpx;
  height: 45rpx;
  opacity: 0.5;
}