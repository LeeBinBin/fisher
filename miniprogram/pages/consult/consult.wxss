/* 页面整体样式 */
.consult-page {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 80rpx;
}
.background-image {
  position: absolute; /* 改为绝对定位 */
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1; /* 放置在内容下方 */
}

/* 导航栏 */
.nav-bar {
  display: flex;
  justify-content: center; 
  align-items: center;
  height: 120rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  font-size: 36rpx;
  text-align: center;
  font-weight: 600;
  color: #1a2e44;
}

.history-icon {
  width: 100rpx;
  height: 100rpx;
}

/* 搜索栏 */
.search-box {
  padding: 20rpx 0rpx;
}

.search-inner {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 80rpx;
  padding: 16rpx 0rpx;
  box-shadow: 0 2rpx 15rpx rgba(0, 0, 0, 0.03);
}
input {
  width: 100%;
}
.search-icon {
  width: 6rpx;
  height: 32rpx;
  margin-right: 20rpx;
  color: #8a9baa;
}

.search-placeholder {
  font-size: 28rpx;
  color: #8a9baa;
}

/* 分类标签 */
.tag-container {
  display: flex;
  overflow-x: auto;
  padding: 0 30rpx 20rpx;
  gap: 20rpx;
  scrollbar-width: none; /* 隐藏滚动条 */
  justify-content: space-around;
}

.tag-container::-webkit-scrollbar {
  display: none;
}

.tag-item {
  padding: 12rpx 30rpx;
  background-color: #fff;
  border-radius: 60rpx;
  font-size: 26rpx;
  color: #556677;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
}

.tag-active {
  background-color: #009fad;
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(45, 129, 224, 0.3);
}

/* 专家列表 */
.expert-list {
  padding: 0 30rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.expert-card {
  background-color: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.expert-card:hover {
  transform: translateY(-8rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

/* 专家头像与信息 */
.expert-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative; /* 父容器设为相对定位，作为头像定位基准 */
  padding-left: 100rpx; /* 预留头像位置空间 */
  min-height: 80rpx; /* 确保容器高度足够容纳头像 */
}

.expert-avatar {
  position: absolute; /* 头像绝对定位 */
  left: -5rpx; /* 固定在左侧 */
  top: 50%; /* 垂直居中对齐 */
  transform: translateY(-50%); /* 精确垂直居中 */
  width: 100rpx; /* 固定宽度 */
  height: 120rpx; /* 固定高度 */
  border-radius: 50%; 
  object-fit: cover; /* 图片自适应裁剪，避免变形 */
}

.expert-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a2e44;
  margin-bottom: 8rpx;
  display: block;
  padding-left: 16rpx;
}

.expert-title {
  font-size: 24rpx;
  color: #6c7a89;
  margin-bottom: 12rpx;
  display: block;
  padding-left: 16rpx;
}

.expert-tag {
  display: inline-block;
  background-color: #e8f0fe;
  color: #2d81e0;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 40rpx;
}

/* 专家简介 */
.expert-desc {
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-family: var(--font-primary);
  font-size: 26rpx;
  line-height: 1.6; /* 提升可读性 */
  color: #4b5563;
}

/* 咨询数据 */
.expert-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.stat-item {
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
  letter-spacing: -0.5rpx;
}

.stat-text {
  font-size: 20rpx;
  color: #8a9baa;
}

/* 咨询按钮 */
.consult-btn {
  width: 100%;
  height: 72rpx;
  background-color: #009fad;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.consult-btn::after {
  border: none;
}

/* 底部提示 */
.consult-tip {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 15rpx rgba(0, 0, 0, 0.05);
}

.tip-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  color: #2d81e0;
}

.tip-text {
  font-size: 24rpx;
  color: #556677;
  flex: 1;
}
