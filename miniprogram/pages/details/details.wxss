.tools-container {
  background-color: #000;
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tools-container image {
  width: 70rpx;
  height: 70rpx;
}

.tools-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tools-item text {
  color: #fff;
  font-size: 26rpx;
}

.features-container {
  width: 100%;
  display: grid;
  margin-top: 40rpx;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  place-items: center;
  padding: 20rpx 0;
}

.features-item {
  display: flex;
  flex-direction: column;
  place-items: center;
  margin: 30rpx 0;
}

.features-item image {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  padding: 30rpx;
  box-shadow: 0 0 13rpx rgba(0, 0, 0, 0.4);
}

.features-item text {
  margin-top: 12rpx;
  font-size: 28rpx;
}