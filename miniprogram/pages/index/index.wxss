.container {
  width: 100%;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

.content-container {
  min-height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.image-style {
  margin-top: 65rpx;
  width: 500rpx;
  height: 300rpx;
  position: absolute;
  left: auto;
  top: 100%;
  transform: translateY(-50%);
}

.camera-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 70rpx;
}

.camera-outer-ring {
  width: 380rpx;
  height: 380rpx;
  border: 6rpx solid rgba(224, 240, 235, 0.9);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera-icon-container {
  width: 330rpx;
  height: 330rpx;
  border: 0.4rpx solid #9ae7d1;
  border-radius: 50%;
  background: linear-gradient(0deg, #a7edda 0%, #daeee8 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

/* #83ada1; */
.camera-icon {
  width: 200rpx;
  height: 200rpx;
  z-index: 1;
}

.camera-text {
  color: #3ecaa3;
  font-size: 40rpx;
  font-weight: 700;
  margin-top: 30rpx;
  opacity: 0.9;
}

.button-group {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 功能按钮区样式 */
.function-title {
  color: #fff;
  font-size: 45rpx;
  margin-bottom: 10rpx;
  text-align: right;
  padding-right: 20rpx;
}

.functions {
  display: flex;
  justify-content: center;
  margin-top: 65rpx;
}
.history-item {
  background: linear-gradient(120deg, rgb(112, 190, 206), rgb(120, 255, 214));
  border-radius: 20rpx;
  padding: 20rpx 10rpx 20rpx 30rpx;
  font-size: 50rpx;
  box-shadow: 2rpx 2rpx 8rpx #3CD3AD;
  border: 1rpx solid rgba(93, 206, 199, 0.308);
  margin-right: 45rpx;
  margin-left: 40rpx;
  width: 270rpx;
  height: 245rpx;
  position: relative;
}
.history-count {
  color: #fff;
  font-size: 60rpx;
  font-weight: 500;
  opacity: 0.9;
  margin-top: 110rpx;
  position: absolute;
  left: 60rpx;
}

.item {
  background: linear-gradient(120deg, rgb(112, 190, 206), rgb(120, 255, 214));
  border-radius: 20rpx;
  padding: 20rpx 10rpx 20rpx 30rpx;
  font-size: 50rpx;
  box-shadow: 2rpx 2rpx 8rpx #3CD3AD;
  border: 1rpx solid rgba(93, 206, 199, 0.308);
  margin-right: 35rpx;
  width: 250rpx;
  height: 90rpx;
  margin-bottom: 15rpx;
  text-align: left;
  line-height: 90rpx;
}


